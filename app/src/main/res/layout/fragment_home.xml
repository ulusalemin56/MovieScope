<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".ui.home_fragment.HomeFragment">

    <!-- Set of Profile ImageView. -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileShapeableImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_image_profil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <!-- Set of Search IconButton. -->
    <ImageButton
        android:id="@+id/searchIconButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circular_background_search"
        android:contentDescription="@string/search_button"
        android:src="@drawable/ic_launcher_search_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- NestedScrollView was added for content to be scrollable. -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileShapeableImageView">

        <!-- ConstraintLayout was added for items to be positioned within NestedScrollView. -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Set of Most Pop Movies title. -->
            <TextView
                android:id="@+id/mostPopMoviesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/most_pop_movies"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Set of Most Pop Movies RecyclerVİew -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mostPopMoviesRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mostPopMoviesTextView" />

            <!-- Set of Top Rated 250 title. -->
            <TextView
                android:id="@+id/topRatedMoviesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/top_rated_250"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mostPopMoviesRecyclerView" />

            <!-- Set of Top Rated 250 RecyclerVİew -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topRatedMoviesRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topRatedMoviesTextView" />

            <!-- Set of Most Pop Series title. -->
            <TextView
                android:id="@+id/mostPopSeriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/most_pop_series"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topRatedMoviesRecyclerView" />

            <!-- Set of Most Pop Series RecyclerVİew -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mostPopSeriesRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mostPopSeriesTextView" />

            <!-- Set of Top Boxoffice title. -->
            <TextView
                android:id="@+id/topBoxofficeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/top_boxoffice"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mostPopSeriesRecyclerView" />

            <!-- Set of Top Boxoffice RecyclerVİew -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topBoxofficeRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topBoxofficeTextView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>